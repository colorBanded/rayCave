{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build raylib",
			"type": "shell",
			"command": "/usr/bin/clang++",
			"args": [
				"src/main.cpp",
				"src/voxel.cpp",
				"src/texture_manager.cpp",
				"-o",
				"build/rayCave",
				"-I${workspaceFolder}/include",
				"-I${workspaceFolder}/include/FastNoise",
				"-I/opt/homebrew/include",
				"-L/opt/homebrew/lib",
				"-L${workspaceFolder}/lib",
				"-lraylib",
				"-lFastNoise",
				"-std=c++17",
				"-framework",
				"IOKit",
				"-framework",
				"Cocoa",
				"-framework",
				"OpenGL"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"PATH": "/usr/bin:/bin:/usr/sbin:/sbin:/opt/homebrew/bin:${env:PATH}"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "run",
			"type": "shell",
			"command": "./build/rayCave",
			"dependsOn": [
				"build raylib"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "none"
		},
		{
			"label": "build and run",
			"type": "shell",
			"dependsOrder": "sequence",
			"dependsOn": [
				"build raylib",
				"run"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}